{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": [
        "src/*",
        "declarations/*"
      ]
    },
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": [
      "es2019",
      "dom",
    ],
    "target": "es2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "inlineSourceMap": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "stripInternal": true,
    "pretty": false,
    "declaration": true,
    "rootDir": "src",
    "outDir": "dist"
  },
  "include": [
    "./src/**/*.ts",
    "src/**/*.json"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}